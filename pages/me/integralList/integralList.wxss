/* pages/me/integralList/IntegralList.wxss */
.top{
  width: 100%;
  font-size:35rpx;
  margin: auto;
  background-color:orange;
  color: white;
  padding: 15px 0;
  text-align: center;
  position: fixed;
   z-index: 11;
}
.integral{
 font-size: 40rpx;
 margin: auto; 
}
.about{
   display: flex;
   flex-direction: row;
   /* margin-left: 60rpx; */
   padding-top: 10px;
}
.about>view{
   width: 50%;
   margin: auto;
   font-size: 14px;
}
.about>view:nth-child(2){
  text-align: right;
  margin-right: 20px;
}

.orderContainer {
  padding: 16px;
  top: 150px;
  position: relative;
  z-index: 10;
}

.orderContainer .orderList {
  background: #fff;
  border-radius: 10px;
  padding: 10px 10px;
  margin-bottom: 15px;
}

.orderContainer .orderList .start {
  text-align: right;
  line-height: 40px;
  font-size: 14px;
  color: #faaf3b;
}

.orderContainer .orderList .photo {
 width: 25%;
  margin-right: 12px;
}
.orderContainer .orderList .photo>image {
  width:80px;
  height: 80px;
}

.orderContainer .orderList .centents {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15px;
  padding:5px 8px ;
}

.orderContainer .orderList .centents:last-child {
  margin-bottom: 0;
}

.orderContainer .orderList .assesic {
  flex: 1;
  display: flex;
  width: 70%;
  justify-content: space-between;
}

.orderContainer .orderList .assesic .center {
  color: #444;
  font-size: 14px;
  word-break: break-all;
  flex: 1;
}

.orderContainer .orderList .assesic .center .tag {
  margin-top: 12px;
}

.orderContainer .orderList .assesic .center .tag text {
  font-size: 12px;
  color: #faaf3b;
  background: rgb(255, 242, 226);
  border-radius: 2px;
  padding: 0 4px;
  line-height: 14px;
}

.orderContainer .orderList .assesic .right {
  margin-left: 20px;
  font-size: 14px;
  color: #444;
  text-align: right;
}

.orderContainer .orderList .assesic .right .number {
  font-size: 13px;
  color: #999;
}

.orderContainer .assesic .shoping {
  font-size: 14px;
  color: #999;
  padding-top: 8px;
}

.orderContainer .orderList .button {
  display: flex;
  justify-content: flex-end;
  padding: 5px;
}

.orderContainer .orderList .button .btn {
  line-height: 30px;
  padding: 0 8px;
  border-radius: 15px;
  border: 1px solid #999;
  font-size: 14px;
  color: #999;
  margin-left: 12px;
}

.orderContainer .orderList .button .btn.grensn {
  border-color: #faaf3b;
  color: #faaf3b;
}

.orderContainer .orderList .button .btn.yellow {
  border-color: #faaf3b;
  color: #faaf3b;
}

.loadingMsg {
  text-align: center;
  font-size: 14px;
  color: #ccc;
  padding: 20px 0;
}
.quantity{
  text-align: center;
  display: flex;
  width: 100px;
	border: 1px solid #dedede;
	border-radius: 5px;
	overflow: hidden;
  color: rgb(0, 0, 0) ;
}
.quantity>input{
   width: 40px;
    height: 30px;
    text-align: center;
    box-sizing: border-box;
    border-left: 1px solid #dedede;
    border-right: 1px solid #dedede;
}
.quantity .button{
    background: #fff;
    color: #413b3b;
    padding:0 10px;
    width: 20px;
    text-align: center;
    line-height: 28px;
}
.changeRule{
  position: absolute;
  right: 20px;
  top: 10px;
  font-size: 12px;
}
.rules{
  font-size: 14px;
}
.textstyle{
 display: -webkit-box;overflow: hidden;text-overflow: ellipsis;word-wrap: break-word;white-space: normal !important;-webkit-line-clamp:2;-webkit-box-orient: vertical
 }
 .viewstyle{
 display: -webkit-box;overflow: hidden;text-overflow: ellipsis;word-wrap: break-word;white-space: normal !important;-webkit-line-clamp:1;-webkit-box-orient: vertical
 }