.container {
  overflow: hidden;
}

.tabTitleBox {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 16px;
  height: 50px;
  background: #fff;
  border-top: 1px solid #eee;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  right: 0;
  z-index: 6;
}

.tabTitleBox .tabList {
  color: #333;
  font-size: 15px;
  padding: 6px 0;
  border-bottom: 2px solid transparent;
}

.tabTitleBox .tabList.active {
  color: #faaf3b;
  border-color: #faaf3b;
}

.container .swiper {
  margin-top: 50px;
}

.orderContainer {
  padding: 16px;
}

.orderContainer .orderList {
  background: #fff;
  border-radius: 10px;
  padding: 0 10px;
  margin-bottom: 15px;
}

.orderContainer .orderList .start {
  text-align: right;
  line-height: 40px;
  font-size: 14px;
  color: #faaf3b;
}

.orderContainer .orderList .photo {
  width: 90px;
  margin-right: 12px;
}

.orderContainer .orderList .centents {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15px;
}

.orderContainer .orderList .centents:last-child {
  margin-bottom: 0;
}

.orderContainer .orderList .assesic {
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.orderContainer .orderList .assesic .center {
  color: #444;
  font-size: 14px;
  word-break: break-all;
  flex: 1;
}

.orderContainer .orderList .assesic .center .tag {
  margin-top: 12px;
}

.orderContainer .orderList .assesic .center .tag text {
  font-size: 12px;
  color: #faaf3b;
  background: rgb(255, 242, 226);
  border-radius: 2px;
  padding: 0 4px;
  line-height: 14px;
}

.orderContainer .orderList .assesic .right {
  margin-left: 20px;
  font-size: 14px;
  color: #444;
  text-align: right;
}

.orderContainer .orderList .assesic .right .number {
  font-size: 13px;
  color: #999;
}

.orderContainer .assesic .shoping {
  font-size: 14px;
  color: #999;
  padding-top: 12px;
}

.orderContainer .orderList .button {
  display: flex;
  justify-content: flex-end;
  padding-bottom: 12px;
  margin-top: 5px;
}

.orderContainer .orderList .button .btn {
  line-height: 30px;
  padding: 0 8px;
  border-radius: 15px;
  border: 1px solid #999;
  font-size: 14px;
  color: #999;
  margin-left: 12px;
}

.orderContainer .orderList .button .btn.grensn {
  border-color: #999;
  color: #999;
}

.orderContainer .orderList .button .btn.yellow {
  border-color: #faaf3b;
  color: #faaf3b;
}

.loadingMsg {
  text-align: center;
  font-size: 14px;
  color: #ccc;
  padding: 20px 0;
}

/* 弹出层样式 */

.layerBox {
  /* display: none; */
  position: fixed;
  top: 0;
  left: 0;
  right: 0px;
  bottom: 0;
  overflow: hidden;
  z-index: 999999;
  background: rgba(0, 0, 0, 0.5);
}

.layerBox .closeCustomer {
  position: absolute;
  z-index: 10001;
  right: 0px;
  top: 0px;
  width: 30px;
  height: 30px;
}

.layerBox .content {
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  /* z-index: 9999999; */
  width: 320px;
  height: 200px;
  background: #fff;
  border-radius: 15px;
  padding-top: 15px;
}

.layerBox .content .content-auto {
  margin: 0 auto;
  font-size: 16px;
}

.layerBox .content .bg {
  width: 100%;
  display: block;
}

.layerBox .content .box {
  width: 280px;
  height: 150px;
}

.layerBox .submit-btn {
  color: #fff;
  text-align: center;
  width: 100%;
}

.layerBox .submit-btn .confirm {
  display: inline-block;
  background: #ffb12a;
  padding: 10px 30px;
  border-radius: 10px;
}

/* 返回首页功能 */

.footer {
  position: fixed;
  bottom: 0;
  right: 0;
  padding: 0 16px;
  height: 150px;
  box-sizing: border-box;
}

.footer .btn {
  width: 35px;
  height: 35px;
  line-height: 36px;
  color: #fff;
  text-align: center;
  font-size: 14px;
}

.footer .btn image {
  width: 100%;
  height: 100%;
}
