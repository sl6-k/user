.shopBox {
    background: #fff;
    padding: 16px;
    margin-bottom: 15px;
}

.shopBox .orderList {
    background: #fff;
    margin-bottom: 15px;
}

.shopBox .orderList .start {
    text-align: right;
    line-height: 40px;
    font-size: 14px;
    color: #faaf3b;
}

.shopBox .orderList .photo {
    width: 90px;
    margin-right: 12px;
}

.shopBox .orderList .centents {
    display: flex;
    justify-content: space-between;
    margin-bottom: 15px;
}

.shopBox .orderList .centents:last-child {
    margin-bottom: 0;
}

.shopBox .orderList .assesic {
    flex: 1;
    display: flex;
    justify-content: space-between;
}

.shopBox .orderList .assesic .center {
    color: #444;
    font-size: 14px;
    word-break: break-all;
    flex: 1;
}

.shopBox .orderList .assesic .center .tag {
    margin-top: 12px;
}

.shopBox .orderList .assesic .center .tag text {
    font-size: 12px;
    color: #faaf3b;
    background: rgb(255, 242, 226);
    border-radius: 2px;
    padding: 0 4px;
    line-height: 14px;
}

.shopBox .orderList .assesic .right {
    margin-left: 20px;
    font-size: 14px;
    color: #444;
    text-align: right;
}

.shopBox .orderList .assesic .right .number {
    font-size: 13px;
    color: #999;
}

.shopBox  .shoping {
    text-align: right;
    font-size: 16px;
    color: #000;
}

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #faaf3b;
    color: #fff;
    font-size: 16px;
    text-align: center;
    height: 50px;
    line-height: 50px;
}

.refundBox {
    margin-bottom: 55px;
}

.refundBox .whyBox {
    background: #fff;
    margin-bottom: 15px;
}

.refundBox .whyBox .select {
    height: 44px;
    font-size: 16px;
    padding: 0 16px;
}

.refundBox .whyBox .select .iconBox {
    color: #ccc;
}

.refundBox .whyBox .select .iconBox .img {
    width: 16px;
    height: 16px;
    margin-left: 8px;
}

.refundBox .whyBox  .whyMsg {
    line-height: 44px;
    padding: 0 16px;
    font-size: 16px;
}

.refundBox .whyBox  .whyMsg text:last-child {
    color: #faaf3b;
}

.refundBox .whyBox .monyMsg {
    background: #f2f2f2;
    line-height: 44px;
    padding: 0 16px;
    font-size: 14px;
    color: #999;
}

.refundBox .whyBox .whyInput {
    height: 44px;
    padding: 0 16px;
    font-size: 16px;
}

.refundBox .whyBox .whyInput input {
    flex: 1;
}

.uploadBox {
    background: #fff;
    padding-left: 16px;
    box-sizing: border-box;
}

.uploadBox .title {
    line-height: 44px;
    font-size: 16px;
}

.uploadBox .flexBox {
    display: flex;
    flex-wrap: wrap;
}

.uploadBox .flexBox .flexList {
    width: 33.33%;
    padding-right: 16px;
    padding-bottom: 16px;
    box-sizing: border-box;
}

.uploadBox .lastBox {
    width: 100%;
    height: 0px;
    padding-bottom: 100%;
    border: 1px #ccc dashed;
    position: relative;
    box-sizing: border-box;
}

.uploadBox .lastBox .position {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    font-size: 12px;
    color: #ccc;
}

.uploadBox .lastBox .position .icon {
    width: 30px;
    height: 30px;
    margin-bottom: 6px;
}

.flexBox .relative {
    width: 100%;
    height: 0px;
    padding-bottom: 100%;
    border: 1px #ccc dashed;
    position: relative;
    box-sizing: border-box;
	overflow: hidden;
}

.flexBox .relative image {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
