/* 订单详情 */

.container {
  border-top: 1px solid #eee;
}

.container .container-hd {
  background: #ffb12a;
  color: #fff;
}

.container .flex {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.container .flex-1 {
  display: flex;
  flex: 1;
}

.weui_cells {
  margin-top: 15px;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 14px;
  overflow: hidden;
  position: relative;
}

.weui_cells:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  border-top: 1px solid #eee;
  color: #d9d9d9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.weui_cells:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  border-bottom: 0px solid #eee;
  color: #d9d9d9;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.customerService {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  padding-top: 5px;
  padding-bottom: 5px;
  text-align: center;
}

/* 电话咨询 */

.customerService .makePhone {
  width: 50%;
  padding: 5px 0;
  align-items: center;
  display: flex;
  justify-content: center;
}

/* 在线客服 */

.customerService .service {
  width: 50%;
  padding: 5px 0;
  border-right: 1px solid #eee;
  margin-left: -1px;
  align-items: center;
  display: flex;
  justify-content: center;
}
