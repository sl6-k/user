/* pages/me/evaluate/evaluate.wxss */

.container {
  background: white;
}

.container .goodsScore-wrap {
  width: 100%;
  height: 80px;
  display: flex;
}

.container .goodsScore-wrap .goods-img-wrap {
  width: 20%;
  margin-top: 14px;
  margin-left: 14px;
}

.container .goodsScore-wrap .goods-img-wrap image {
  width: 60px;
  height: 60px;
}

.container .goodsScore-wrap .goods-text {
  margin-top: 20px;
  font-weight: 800;
  font-size: 16px;
}

.container .goodsScore-wrap .goods-text .score {
  margin-top: 10px;
}

.container .goodsScore-wrap .goods-text .score image {
  float: left;
  width: 18px;
  height: 18px;
  margin-right: 10px;
}

.container .evaluate {
  margin: 14px;
  background: rgba(0, 0, 0, 0.02);
}

.container .evaluate textarea {
  width: 340px;
  padding: 10px 5px;
}

textarea {
  height: 120px;
}

.img-wrapper {
  background: white;
  padding: 14px;
}

.img-wrapper .upload-img {
  width: 30%;
  height: 100px;
  margin: 0 5px;
  padding: 15px;
  box-sizing: border-box;
}

.img-wrapper .img-wrap {
  width: 25%;
  height: 80px;
  margin: 5px;
  box-sizing: border-box;
  display: inline-block;
  background: rgba(0, 0, 0, 0.01);
  text-align: center;
}

.img-wrapper .img-wrap .img {
  width: 100%;
  height: 100%;
}

.img-wrapper .img-wrap .img image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 8px;
}

.img-wrapper .img-wrap .img .img-desc {
  width: 100%;
  font-size: 12px;
  color: rgba(0, 0, 0, 0.3);
}

.container .submit {
  width: 100%;
  margin-top: 15px;
}

.container .submit button {
  margin: 0 14px;
  background: #f7931e;
  border-radius: 23px;
  color: white;
}

.container .submit button::after {
  border: none;
}

.score {
  margin-top: 10px;
  margin-left: 5px;
  display: flex;
  flex: 1;
}

.score image {
  float: left;
  width: 18px;
  height: 18px;
  margin-right: 10px;
}

/* 自定义 radio 样式 */

radio {
  width: 38rpx;
}

radio .wx-radio-input.wx-radio-input-checked {
  border: none;
  background: red;
}

radio .wx-radio-input {
  border-radius: 50%;
  width: 28rpx;
  height: 28rpx;
}

/* 选中后的样式 （可根据设计稿需求自己修改） */

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  width: 44rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
  font-size: 26rpx; /* 对勾大小 26rpx */
  color: #fff; /* 对勾颜色 */
  background: #faaf3b;
  border-color: #faaf3b;
}

/* 匿名评价 */
.anonymous{
  display:flex;flex-wrap:nowrap;justify-content:space-between;padding:0 15px;
}
.anonymous text{
  color:#b5b5b5;
}
