/* 请选择车型的样式开始 */

.weui_cells {
  margin-top: 0;
  background-color: #fff;
  line-height: 1.41176471;
  overflow: hidden;
  position: relative;
  background: #ffffe0;
  font-size: 12px;
  color: #f2874b;
}

.weui_cell_hd image {
  width: 30rpx;
  height: 30rpx;
  display: block;
}

.weui_cells:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  border-top: 0px solid #d9d9d9;
  color: #d9d9d9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.weui_cells:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  border-bottom: 0px solid #d9d9d9;
  color: #d9d9d9;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

