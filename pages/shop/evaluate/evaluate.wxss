.evaluateBox {
  background: #fff;
  margin-bottom: 15px;
}

.evaluateBox .title {
  padding: 0 16px;
  line-height: 40px;
  font-size: 16px;
}

.evaluateBox .evaluateList {
  display: flex;
  justify-content: space-between;
  padding: 10px 16px;
  border-top: 1px solid #eee;
}

.evaluateBox .evaluateList:last-child {
  border-top: 1px solid #fff;
}

.evaluateList .photo {
  width: 30px;
  height: 30px;
  margin-right: 14px;
}

.evaluateList .photo image {
  display: block;
  width: 100%;
  height: 100%;
}

.evaluateList .evaluateCentent {
  flex: 1;
}

.evaluateList .evaluateCentent .titleTime .titles {
  font-size: 15px;
  color: #888;
}

.evaluateList .evaluateCentent .titleTime .time {
  font-size: 15px;
  color: #888;
}

.evaluateList .evaluateCentent .titleTime  .titles text:first-child {
  font-size: 16px;
  color: #333;
}

.evaluateList .evaluateCentent .titleTime .titles text:last-child {
  font-size: 12px;
  margin-left: 10px;
}

.evaluateList .evaluateCentent .share {
  margin-top: 6px;
}

.evaluateList .evaluateCentent .textCentent {
  word-break: break-all;
  padding: 14px 0;
  font-size: 14px;
  color: #333;
}

.evaluateList .evaluateCentent  .shopNameTime {
  color: #888;
  font-size: 12px;
}

.evaluateBox .localtion {
  border-top: 1px solid #eee;
  color: #333;
  font-size: 16px;
  text-align: center;
  display: block;
  padding: 10px;
}

.loadingMsg {
  text-align: center;
  font-size: 14px;
  color: #ccc;
  padding: 20px 0;
}

.numberBg {
  width: 120px;
  height: 16px;
  margin-right: 12px;
  background: url('data:image/png;base64,') no-repeat;
  background-size: 100% 100%;
}

.numberBg image {
  width: 120px;
  height: 16px;
  display: block;
}

.numberBg .ovflow {
  width: 70%;
  overflow: hidden;
}
