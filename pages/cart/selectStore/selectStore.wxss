.selectBox {
  position: fixed;
  left: 0px;
  right: 0px;
  height: 40px;
  align-items: center;
  background: #fff;
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
}

.store-operating{
  color: #888;
}

.selectBox .selectList {
  display: flex;
  width: 33.33%;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  border-right: 1px solid #eee;
}

.selectBox .selectList:last-child {
  border: none;
}

.selectBox .selectList .icon {
  width: 10px;
  height: 10px;
  margin-left: 8px;
}

.selectBox .selectList .icon image {
  width: 100%;
  height: 100%;
  display: block;
}

.shopCainerter {
  padding-top: 40px;
}

.shopCainerter .shopList {
  padding: 10px 16px;
  border-bottom: 1px solid #eee;
  background: #fff;
  display: flex;
  flex:1;
  /* justify-content: space-between; */
}

.shopCainerter .shopList .shopPhoto {
  width: 90px;
  height: 90px;
}

.shopCainerter .shopList .shopPhoto image {
  display: block;
  width: 100%;
  height: 100%;
}

.shopCainerter .shopList .shopText {
  flex: 1;
  width:200px;
  padding-left: 10px;
  box-sizing: border-box;
}

.shopCainerter .shopList .shopText .shopTitle {
  font-weight: 500;
  font-size: 16px;
}

.shopCainerter .shopList .shopText  .shopEvaluate {
  line-height: 34px;
  color: #888;
  font-size: 13px;
}

.shopCainerter .shopList .shopText  .shopEvaluate text:last-child {
  color: #faaf3b;
  font-size: 13px;
  margin-left: 8px;
}

.shopCainerter .shopList .shopText .shopLocaltion {
  overflow: hidden;
  color: #444;
  font-size: 13px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.shopCainerter .shopList .shopText .shopLocaltion .km {
  margin-left: 12px;
  color: #dfdfdf;
}

.shopCainerter .shopList .shopText .shopLocaltion .localtion {
  overflow: hidden;
  width: 70%;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.shopCainerter .shopList .shopText .shopTag {
  overflow: hidden;
  display: flex;
  color: #ccc;
  font-size: 12px;
  margin-right: 6px;
  margin-bottom: 5px;
}

.shopCainerter .shopList .shopText .shopTag .tag {
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 1px 4px;
  display: block;
  font-size: 10px;
}

.loadingMsg {
  text-align: center;
  font-size: 14px;
  color: #ccc;
  padding: 20px 0;
}
