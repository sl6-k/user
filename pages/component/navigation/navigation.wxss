.navigation {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 999;
    color: #000;
    text-align: center;
}

.navigation .status {
    width: 100%;
	background: #fff;
}

.titleBar.borderBottom{
	border-bottom: 1px solid #eee;
}
.titleBar, .navigateContent {
    position: relative;
    background: #fff;
}

.navigation .leftIcon {
    position: absolute;
    left: 8px;
    top: 0;
    bottom: 0;
    width: 40px;
}

.navigation .title {
    width: 100%;
    height: 100%;
    line-height: 100%;
	font-size: 18px;
}

/*箭头部分*/

.navigator {
    width: 36rpx;
    height: 36rpx;
    float: left;
    margin-top: 32rpx;
    background: #fff;
    margin-left: 35rpx;
}

.navigator:after {
    content: '';
    display: block;
    width: 25rpx;
    height: 25rpx;
    border-right: 4rpx solid #000;
    border-top: 4rpx solid #000;
    -webkit-transform: rotate(225deg);
    /*箭头方向可以自由切换角度*/
    transform: rotate(225deg);
}
